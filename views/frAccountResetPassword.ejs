<%- include('./partials/frHead.ejs') %>
<title>Réinitialiser votre mot de passe | OptiLeague</title>
</head>
<body>
  <header>
    <section class="row-sa-ce">
    <nav>
      <a href="https://www.optileague.fr"><img class="height-100" src="/images/brand/optileague-147x100-color.png" alt="OptiLeague Logo"></a>
    </nav>
  </section>
  </header>
  <hr class="separator">
  <main>
    <section>
      <h2 class="center">Réinitialiser votre mot de passe</h2>
    </section>
    <section>
      <form action="/fr/a/reinitialiser-mot-de-passe" method="post" class="centered-max-width-400">
        <% if (message !== 'undefined') { %>
          <p class="alert-danger center"><%= message %></p>
          <hr class="separator">
        <% } else { %>
        <%  return ; %>
        <% } %>
        <input type="password" name="newpassword" id="newpassword" placeholder="Nouveau mot de passe" required>
        <hr class="separator">
        <input type="password" name="newpassword2" id="new-password2" placeholder="Confirmer le nouveau mot de passe" required>
        <hr class="separator">
        <input type="hidden" name="userid" id="userid" value=<%= userId %>>
        <input type="submit" class="cta-2 submit-link" value="Réinitialiser le mot de passe">
      </form>
    <hr class="separator">
    <nav class="center">
      <a href="/fr/mon-compte">Non, ne pas réinitialiser</a>
    </nav>
  </section>
  </main>
</body>
</html>
