<%- include('./partials/frHead.ejs') %>
<title>Se connecter | OptiLeague</title>
</head>
<body>
  <header>
    <section class="row-sa-ce">
    <nav>
      <a href="https://www.optileague.fr/lancement"><img class="height-100" src="/images/brand/optileague-147x100-color.png" alt="OptiLeague Logo"></a>
    </nav>
    <p>
      Pas de compte ? <a href="/fr/a/s-inscrire">S'inscrire</a>
    </p>
  </section>
  </header>
  <hr class="separator">
  <main>
    <section>
      <h2 class="center">Connectez-vous à votre compte</h2>
      <form action="/fr/a/se-connecter" method="post" class="centered-max-width-400">
        <% if (message !== 'undefined') { %>
          <p class="alert-danger center"><%= message %></p>
          <hr class="separator">
        <% } else { %>
        <%  return ; %>
        <% } %>
        <input type="text" name="email" id="email" placeholder="Votre adresse e-mail" required>
        <hr class="separator">
        <input type="password" name="password" id="password" placeholder="Votre mot de passe" required>
        <hr class="separator">
        <input type="submit" class="cta-2 submit-link" value="Se connecter">
      </form>
      <!--
      <p class="center">
        <a href="reinitialiser-mot-de-passe.html">Vous avez oublié votre mot de passe ?</a>
      </p>
      -->
    </section>
  </main>
</body>
</html>